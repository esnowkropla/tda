using UnityEngine;
using UnityEngine.UI;
using System.Collections;

public class ModButton : MonoBehaviour
{
	public string path;
	public string modName;
    public Text text;

    public void SetText(string inText)
    {
        path = inText;
        modName = Utility.PathToFolderName(inText);
        text.text = modName;
    }

	void Start ()
	{
	
	}
	
	void Update ()
	{
	
	}
}
